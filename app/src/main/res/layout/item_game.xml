<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp">

    <!-- Используем LinearLayout с вертикальной ориентацией -->
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/gradient_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Картинка игры -->
        <ImageView
            android:id="@+id/imageGame"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop" />

        <!-- Контейнер для всего текста и кнопки "избранное" -->
        <!-- RelativeLayout здесь удобен, чтобы разместить кнопку справа -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Название Игры -->
            <TextView
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="Название"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:layout_alignParentStart="true"/>

            <!-- Жанр -->
            <TextView
                android:id="@+id/textGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0"
                android:text="Жанр"
                android:layout_below="@id/textName"
                android:layout_marginTop="4dp"/>

            <!-- Год издания (рядом с жанром) -->
            <TextView
                android:id="@+id/textReleaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0"
                android:text="Год"
                android:layout_alignBaseline="@id/textGenre"
                android:layout_toEndOf="@id/textGenre"
                android:layout_marginStart="8dp"/>

            <!-- Издатель -->
            <TextView
                android:id="@+id/textPublisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0"
                android:text="Издатель"
                android:layout_below="@id/textGenre"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Краткое описание -->
            <TextView
                android:id="@+id/textShortDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0"
                android:text="Краткое описание"
                android:layout_below="@id/textPublisher"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <!-- Кнопка избранного -->
            <ImageView
                android:id="@+id/iconFavorite"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"

                android:src="@android:drawable/btn_star_big_off"/>
        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
