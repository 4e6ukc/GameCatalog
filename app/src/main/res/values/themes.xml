    <style name="Theme.GameCatalog" parent="Base.Theme.GameCatalog" />
    <style name="App.SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Цвет текста, который вы вводите -->
        <item name="android:textColor">@color/white</item>

        <!-- Цвет текста-подсказки ("Поиск по названию") -->
