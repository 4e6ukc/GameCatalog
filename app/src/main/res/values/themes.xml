    <style name="Base.Theme.GameCatalog" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">#210340</item>
        <item name="searchViewStyle">@style/App.SearchViewStyle</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
